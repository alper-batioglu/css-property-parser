hslaFunc {
  Exp = "hsla(" ( ( HslaFunc_IntermediateRule0 | HslaFunc_IntermediateRule1 ) ) ")"
  HslaFunc_IntermediateRule0 = ( Hue percentage percentage ( "/" AlphaValue )? )
  HslaFunc_IntermediateRule1 = ( Hue "," percentage "," percentage ( "," AlphaValue )? )
  Hue = ( number | angle )
  percentage = number "%"
  AlphaValue = ( percentage | number )
  number = number_floatScientific | number_simpleScientific | number_float | number_simple | number_float
  number_simple = ("+"| "-")? digit+
  number_float = (("+"| "-")? digit* "."? digit+)
  number_simpleScientific = (("+"| "-")? digit+ "e" "-"? digit+)
  number_floatScientific = (("+"| "-")? digit* "."? digit+ "e" "-"? digit+)
  angle = number angleUnit
  angleUnit = "deg" | "grad" | "rad" | "turn"
}